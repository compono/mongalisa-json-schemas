{
  "compilerOptions": {
    "outDir": "./dist/cjs",
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
